{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "resolveJsonModule": true,
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "incremental": true,
        "skipLibCheck": true,
        "strict": true,
        "outDir": "dist"
    },
    "include": ["./*"]
}
